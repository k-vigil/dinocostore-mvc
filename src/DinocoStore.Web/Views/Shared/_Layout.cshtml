<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dinoco Store - @ViewData["Title"]</title>
    <script src="https://unpkg.com/feather-icons"></script>
    <link rel="preconnect" href="https://rsms.me/">
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css">
    @await RenderSectionAsync("styles", required: false)
</head>

<body>
    <div id="preloader">
        <div class="spinner"></div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand fw-semibold">Dinoco Store</a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
                <i>Menu</i>
            </button>
            <div class="collapse navbar-collapse" id="navbar-menu">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link" id="home-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Products" asp-action="Index" class="nav-link" id="products-link">Products</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Invoices" asp-action="Index" class="nav-link" id="invoices-link">Invoices</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <partial name="_Message" />

    <main class="my-4">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>feather.replace()</script>
    <script>
        window.addEventListener('DOMContentLoaded', (e) => {
            setTimeout(() => {
                document.querySelector('#preloader').style.display = 'none';

                const link = '@ViewData["ActiveLink"]';
                document.getElementById(link).classList.add('active')
            }, 500);
        });
    </script>
    @await RenderSectionAsync("scripts", required: false)
</body>

</html>
